<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="100"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        android:layout_weight="10"
        >
        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_circle"
            android:gravity="center"
            android:text="1"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_otp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="2"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_otp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="3"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#fff"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="222dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/image_phone_number"
        />
    <TextView
        android:id="@+id/title_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="Enter Your Phone Number"
        android:textAlignment="center"
        style="@style/TEXT"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_weight="5"
        />

    <TextView
        android:id="@+id/intro_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:lineSpacingExtra="16dp"
        style="@style/TEXT"
        android:text="@string/title_phone_number"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="16dp"
        >
        <com.hbb20.CountryCodePicker
            android:id="@+id/picker_phone_country"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:background="@drawable/border_shadow"
            app:ccp_showNameCode="false"/>

        <EditText
            android:id="@+id/ed_phone_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/border_shadow"
            android:hint="Number Phone"
            android:inputType="phone"
            android:lineSpacingExtra="16dp"
            style="@style/TEXT"
            android:padding="8dp"
            android:phoneNumber="true" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/btn_gradient_style"
        android:padding="10dp"
        android:text="Continue"
        android:textColor="#fff"
        android:textSize="16dp"
        android:textStyle="bold" />
    <ProgressBar
        android:id="@+id/progress_phone_number"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</LinearLayout>